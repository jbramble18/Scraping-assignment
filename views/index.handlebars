<h1>Articles that You have scraped </h1>

<h2>Scraped Articles</h2>

 <nav class="navbar navbar-dark bg-primary">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">KC Star Mongo Scraper</a>
            </div>
            <ul class ="nav navbar-nav navbar-right top-buttons">
                <ul class="nav navbar-nav">
                    <li><button type="button" class="btn btn-primary" id="scrape">Scrape Articles</button></li>
                    <li><button type = "button" class="btn btn-primary" id = "saved">Saved Articles</button></li>
                </ul>
            </div>
        </div>
    </nav>

<div class = "articles">
    <div class = "load">
        {{#each articles}}
        {{#unless saved}}
            <div class = "article">
                <a href = "{{link}}"><h2>{{title}}</h2></a>
                <button class = "btn btn-danger save" data-id = "{{_id}}">Save Article</button>
                <br>
            </div>
            {{/unless}}
            {{/each}}
    </div>
</div>